<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
		<!-- estaes la vista del form de multimedia -->
		<record id="view_suscripcion_form" model="ir.ui.view">
			<field name="name">co.suscripcion.form</field>
			<field name="model">co.suscripcion</field>
			<field name="arch" type="xml">
				<form string="Suscripcion" version="7.0">
					<sheet>
						<div class="oe_title">
							<label for="codigo" class="oe_edit_only" string="Código se genera Automaticamente" />
							<field name="codigo" readonly="1" />
						</div>
						<notebook>
								<page string="Detalles">
									<group>
										<field name="tipo"/>
										<field name="fecha_inicio"/>
										<field name="fecha_fin"/>
										<field name="activo"/>
										<field name="suscriptor_id"/>
									</group>
									<!--<group string="Médios Disponibles">
										<field name="medio_ids" nolabel="1"/>
									</group>-->
								</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>
		<!-- vista tree de multimedia -->
		<record id="view_suscripcion_tree" model="ir.ui.view">
			<field name="name">co.suscripcion.tree</field>
			<field name="model">co.suscripcion</field>
			<field name="arch" type="xml"> 
				<tree string="Suscripcion" colors="brows:tipo =='bronce'; gray:tipo =='plata'; orange:tipo =='oro'">
					<field name="codigo"/>
					<field name="tipo"/>
					<field name="fecha_inicio"/>
					<field name="fecha_fin"/>
					<field name="activo"/>
					<field name="suscriptor_id"/>
				</tree>
			</field>
		</record>

		<!-- vista de action-->

		<record id="action_suscripcion" model="ir.actions.act_window">
			<field name="name">Suscripcion</field>
			<field name="res_model">co.suscripcion</field>
			<field name="view_type">form</field>
			<field name="view_mode">form,tree</field>
			<field name="view_id" ref="view_suscripcion_tree"/>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Aquí se registran tos tipo de subcripciones que decean los subcriptores".
				</p>
			</field>
		</record>

		<menuitem action="action_suscripcion" id="menu_suscripcion" sequence="5" parent="submenu_suscripcion" />
	</data>
</openerp>