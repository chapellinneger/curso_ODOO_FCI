<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
		<!-- esta en la parte del formulario -->
		<record id="view_medio_form" model="ir.ui.view">
			<field name="name">co.medio.form</field>
			<field name="model">co.tipo.medio</field>
			<field name="arch" type="xml">
				<form string="Medio" version="7.0">
					<sheet>
						<div class="oe_title">
							<label for="nombre" class="oe_edit_only"/>
							<field name="nombre"/>
						</div>
					</sheet>
				</form>
			</field>
		</record>
		<!-- esta es la parte del arbol tree -->
		<record id="view_medio_tree" model="ir.ui.view">
			<field name="name">co.medio.tree</field>
			<field name="model">co.tipo.medio</field>
			<field name="arch" type="xml">
				<tree string="Medio" version="7.0">
					<field name="nombre"/>
				</tree>
			</field>
		</record>

		<!-- vista de action-->

		<record id="action_medio" model="ir.actions.act_window">
			<field name="name">Medio</field>
			<field name="res_model">co.tipo.medio</field>
			<field name="view_type">form</field>
			<field name="view_mode">form,tree</field>
			<field name="view_id" ref="view_medio_tree"/>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Aquí se registran los contenidos de lo medios que estarán disponibles para el alqiler de las peliculas
				</p>
			</field>
		</record>

		<menuitem action="action_medio" id="menu_medio" sequence="5" parent="submenu_medio" />
	</data>
</openerp>