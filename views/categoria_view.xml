<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
		<!-- estaes la vista del form de multimedia -->
		<record id="view_categoria_form" model="ir.ui.view">
			<field name="name">co.categoria.form</field>
			<field name="model">co.categoria</field>
			<field name="arch" type="xml">
				<form string="Categoria" version="7.0">
					<sheet>
						<div class="oe_title">
							<label for="nombre" class="oe_edit_only"/>
							<field name="nombre"/>
							<label for="descripcion" class="oe_edit_only"/>
							<field name="descripcion" required="1" />
						</div>
						<notebook>
							<page string="Detalles">
								<group string="Categoria">
									<field name="parent_id" />
								</group>
								<group string="Sub categoria">
									<field name="child_ids" />
								</group>

								<!--<group string="Médios Disponibles">
									<field name="medio_ids" nolabel="1"/>
								</group>-->
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>
		<!-- vista tree de multimedia -->
		<record id="view_categoria_tree" model="ir.ui.view">
			<field name="name">co.categoria.tree</field>
			<field name="model">co.categoria</field>
			<field name="arch" type="xml">
				<tree string="Categoria" >
					<field name="nombre" />
					<field name="parent_id" />
				</tree>
			</field>
		</record>

		<!-- vista de action-->

		<record id="action_categoria" model="ir.actions.act_window">
			<field name="name">Categoria</field>
			<field name="res_model">co.categoria</field>
			<field name="view_type">form</field>
			<field name="view_mode">form,tree</field>
			<field name="view_id" ref="view_categoria_tree"/>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Aquí se registran las categorias que estarán disponibles para las distintas multimedias.
				</p>
			</field>
		</record>

		<menuitem action="action_categoria" id="menu_categoria" sequence="5" parent="submenu_categoria" />
	</data>
</openerp>